@model AgendaTelefonica.Models.Pessoa

@{
    ViewData["Title"] = "Atualizar contato" + Model.Nome;
}

<h4>Atualizar contato @Model.Nome</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AtualizarPessoa" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PessoaId" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control" id="telefone"/>
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Celular" class="control-label"></label>
                <input asp-for="Celular" class="form-control" id="celular" />
                <span asp-validation-for="Celular" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Atualizar" class="btn btn-outline-primary" /> &emsp;
                <a asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            $("#telefone").mask("(99) 9999-9999");
        });
    </script>
    <script>
        $(document).ready(function () {
            $("#celular").mask("(99) 99999-9999");
        });
    </script>
}
